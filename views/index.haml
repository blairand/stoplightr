    %script{src: '/js/jquery-ui.js'}
    %link{href: '//fonts.googleapis.com/css?family=Stalinist+One', rel: 'stylesheet', type: 'text/css'}
    %link{href: '/css/bootstrap.css', rel: 'stylesheet', type: 'text/css'}
